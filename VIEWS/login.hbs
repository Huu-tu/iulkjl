{{> header}}
<div class="custom-container">
    <div class="jumbotron">
        <h3 class="text-center text-primary">Login Form</h3>
        <br>
        <form action="" id="login" method="POST">
            <div class="form-group">
                <label for="username">Username<span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="username" id="username" placeholder="Enter your username" value="{{username}}">
            </div>
            <div class="form-group">
                <label for="password">Password <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="password" id="password" placeholder="Enter Your Password" value="{{password}}">
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-info btn-block">
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-8">
                        New user? Register <a href="/api/auth/signup">here</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{> footer}}